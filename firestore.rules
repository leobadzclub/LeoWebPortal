rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isAdmin();
    }
    
    // Leaderboard collection
    match /leaderboard/{playerId} {
      allow read: if true; // Public read
      allow write: if isAdmin();
    }
    
    // Matches collection
    match /matches/{matchId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Tournaments collection
    match /tournaments/{tournamentId} {
      allow read: if true; // Public read
      allow write: if isAdmin();
    }
    
    // Schedules collection
    match /schedules/{scheduleId} {
      allow read: if true; // Public read
      allow write: if isAdmin();
    }
    
    // Registrations collection
    match /registrations/{registrationId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    // Payments collection
    match /payments/{paymentId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Community posts collection
    match /community_posts/{postId} {
      allow read: if true; // Public read
      allow write: if isAdmin();
    }
    
    // Member registrations collection (public can create)
    match /member_registrations/{registrationId} {
      allow read: if isAdmin();
      allow create: if true; // Anyone can submit registration
      allow update, delete: if isAdmin();
    }
    
    // Profiles collection (extended user profiles)
    match /profiles/{userId} {
      allow read: if isSignedIn();
      allow write: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isAdmin();
    }
    
    // Player Wallets collection
    match /player_wallets/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      allow create: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Wallet Transactions collection
    match /wallet_transactions/{transactionId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      allow create: if isAdmin();
    }
    
    // Weekly Schedules collection
    match /weekly_schedules/{scheduleId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Users can update via functions
      allow create: if isSignedIn(); // Users can create via functions
    }
    
    // Schedule Votes collection
    match /schedule_votes/{voteId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow create: if isSignedIn();
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }
    
    // Admin Invites collection
    match /admin_invites/{inviteId} {
      allow read: if true; // Anyone can read to verify invite codes
      allow write: if isAdmin();
      allow create: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Leaderboard collections
    match /leaderboard_weeks/{weekId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      allow create: if isAdmin();
    }
    
    match /leaderboard_players/{playerId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      allow create: if isAdmin();
    }
    
    match /leaderboard_matches/{matchId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      allow create: if isAdmin();
    }
  }
}